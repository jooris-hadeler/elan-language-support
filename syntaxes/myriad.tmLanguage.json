{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Myriad",
  "scopeName": "source.myriad",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#runes"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#booleans"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#punctuation"
    },
    {
      "include": "#types"
    },
    {
      "include": "#function-calls"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.myriad",
          "match": "//.*$"
        },
        {
          "name": "comment.block.myriad",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.myriad",
          "match": "\\b(proc|var|const|of|in|if|else|return|for|while|break|continue)\\b"
        }
      ]
    },
    "function-calls": {
      "patterns": [
        {
          "name": "meta.function-call.myriad",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(\\()",
          "captures": {
            "1": {
              "name": "entity.name.function.myriad"
            },
            "2": {
              "name": "punctuation.section.parens.begin.myriad"
            }
          }
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.myriad",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.myriad",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "runes": {
      "patterns": [
        {
          "name": "string.quoted.single.myriad",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.myriad",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.myriad",
          "match": "\\b(u8|u16|u32|u64|usz|i8|i16|i32|i64|isz|f32|f64|bool|ref|str|rune|array|slice)\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.scientific.myriad",
          "match": "\\b\\d+\\.\\d+[eE][+-]?\\d+\\b"
        },
        {
          "name": "constant.numeric.float.myriad",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.hex.myriad",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.binary.myriad",
          "match": "\\b0[bB][01]+\\b"
        },
        {
          "name": "constant.numeric.octal.myriad",
          "match": "\\b0[oO][0-7]+\\b"
        },
        {
          "name": "constant.numeric.decimal.myriad",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "booleans": {
      "patterns": [
        {
          "name": "constant.language.boolean.myriad",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.logical.myriad",
          "match": "\\b(and|or)\\b"
        },
        {
          "name": "keyword.operator.arithmetic.myriad",
          "match": "[+\\-*/%]"
        },
        {
          "name": "keyword.operator.bitwise.myriad",
          "match": "([&|^~]|<<|>>)"
        },
        {
          "name": "keyword.operator.logical.myriad",
          "match": "[!]"
        },
        {
          "name": "keyword.operator.range.myriad",
          "match": "\\.\\."
        },
        {
          "name": "keyword.operator.member.myriad",
          "match": "\\."
        },
        {
          "name": "keyword.operator.equality.myriad",
          "match": "(==|!=)"
        },
        {
          "name": "keyword.operator.order.myriad",
          "match": "(<|>|<=|>=)"
        },
        {
          "name": "keyword.operator.assign.myriad",
          "match": "(=|\\+=|-=|\\*=|/=|%=|&=|\\|=|\\^=|<<=|>>=)"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.separator.comma.myriad",
          "match": ","
        },
        {
          "name": "punctuation.separator.dot.myriad",
          "match": "\\."
        },
        {
          "name": "punctuation.separator.colon.myriad",
          "match": ":"
        },
        {
          "name": "punctuation.terminator.semicolon.myriad",
          "match": ";"
        },
        {
          "name": "punctuation.section.parens.begin.myriad",
          "match": "\\("
        },
        {
          "name": "punctuation.section.parens.end.myriad",
          "match": "\\)"
        },
        {
          "name": "punctuation.section.braces.begin.myriad",
          "match": "\\{"
        },
        {
          "name": "punctuation.section.braces.end.myriad",
          "match": "\\}"
        }
      ]
    }
  }
}